<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="radio"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <text
                jcr:primaryType="nt:unstructured"
                jcr:title="Text"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <text
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter the text of your choice"
                                fieldLabel="Text"
                                name="./text"
                                useFixedInlineToolbar="{Boolean}true"/>
                            <radio
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/radiogroup"
                                fieldDescription="select the radio button"
                                fieldLabel="radio button"
                                name="./getreadyvalue"
                                useFixedInlineToolbar="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <small
                                        jcr:primaryType="nt:unstructured"
                                        text="Small"
                                        value="small"/>
                                    <medium
                                        jcr:primaryType="nt:unstructured"
                                        text="Mediuml"
                                        value="medium"/>
                                    <large
                                        jcr:primaryType="nt:unstructured"
                                        text="Large"
                                        value="large"/>
                                </items>
                            </radio>
                            <male
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="Enter checkbox"
                                name="./male"
                                text="male"/>
                            <female
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/checkbox"
                                fieldDescription="Enter checkbox"
                                name="./female"
                                text="female"/>
                            <dob
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/datepicker"
                                displayedFormat="YYYY-MM-DD HH:mm ss"
                                fieldDescription="Enter tdate of birth"
                                fieldLabel="enter date of birth"
                                name="./dob"
                                useFixedInlineToolbar="{Boolean}true"
                                valueFormat="YYYY-MM-DD[T]HH:mm:ss.SSSZ"/>
                            <number
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/numberfield"
                                fieldDescription="Enter number "
                                fieldLabel="Number "
                                min="{Long}10"
                                name="./number"
                                step="5"
                                useFixedInlineToolbar="{Boolean}true"/>
                            <fileupload
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/fileupload"
                                fieldDescription="upload your file"
                                fieldLabel="file upload"
                                name="./file"
                                useFixedInlineToolbar="{Boolean}true"/>
                        </items>
                    </column>
                </items>
            </text>
        </items>
    </content>
</jcr:root>
